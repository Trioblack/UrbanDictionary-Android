<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background">

    <com.florianmski.urbandictionary.ui.widgets.RibbonView
        android:id="@+id/ribbonView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:id="@+id/linear_layout_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            style="@android:style/TextAppearance.Holo.Large"
            android:id="@+id/textViewWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            tools:text="word" />

        <TextView
            style="@android:style/TextAppearance.Holo.Medium"
            android:id="@+id/textViewDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="definition" />

        <TextView
            style="@android:style/TextAppearance.Holo.Medium"
            android:id="@+id/textViewExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            tools:text="example" />

        <TextView
            style="@android:style/TextAppearance.Holo.Medium"
            android:id="@+id/textViewAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:textColor="@android:color/darker_gray"
            tools:text="author" />

        <ProgressBar
            style="@style/ProgressBar.UrbanDictionary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarVotes" />

    </LinearLayout>

</FrameLayout>